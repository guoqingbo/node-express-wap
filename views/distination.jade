extends ./layout

block stylesheets
    link(rel="stylesheet", href="/stylesheets/distination.css")
block javascripts
block content
    a.back-bar(href='javascript:window.history.back(-1);')
    ul.distination-list
        if data.length
            each item in data
                li.distination-item
                    a(href=item.detailUrl)
                        h4.distination-title=item.name
                        img.distination-img(src=item.img?item.img:"/images/demo/foods-list1.jpg",alt="图片")
                        p.distination-info= item.shortInfo
